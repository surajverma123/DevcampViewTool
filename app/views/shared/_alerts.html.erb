<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Pay attention!", sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Pay attention!", sticky: false) %>
<% else %>
    <%= js add_gritter(flash[:notice], title: "Pay attention!", sticky: false) %>
<% end %>