<div class="row">
    <div class="col-md-12">
        <h1> Edit existing skill </h1>
        <div class="user-skill-new">
            <%= form_for(@skill) do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group">
                <%= f.label :percent_utilized %>
                <%= select("skill", "percent_utilized", skills_utilized_option.collect {|p| [ p[:value] ] }, { include_blank: true }, class:"form-control") %>
            </div>
                <%#= options_from_collection_for_select(City.all, :id, :name) %>
                <div class="form-group">
                    <%= f.submit "Add Skill", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>