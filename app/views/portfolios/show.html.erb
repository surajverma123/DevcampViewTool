<div class="container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' unless @portfolio_item.main_image.nil? %> 
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <em> <%= @portfolio_item.subtitle %> </em>
            <p> <%= @portfolio_item.body %>
            <h2>Technology used </h2>
            <% @portfolio_item.technologies.each do |t|  %>
                <p> <%= t.name %></p>
            <% end %>
            <% if logged_in?(:admin) %>
                <div>
                    <%= link_to "Edit", edit_portfolio_path( @portfolio_item), class: "btn btn-danger" %>
                </div>
            <% end %>
        </div>
    </div>
</div>