<%= form_for(@portfolio_item) do |form| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= form.file_field :main_image %>
        </div>
        <div class="form-group">
          <%= form.file_field :thumb_image%>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, rows: 10, class:"form-control" %>
        </div>
      </div>
      <div class="col-md-12">
        <div>
          <%= form.fields_for :technologies do |technology_form| %>
            <div class="form-group"> <%= technology_form.label :name %> </div>
            <div class="form-group"> <%= technology_form.text_field :name, class:"form-control" %> </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= form.submit "Save portfolio", class:"btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
    

    
  <% end %>