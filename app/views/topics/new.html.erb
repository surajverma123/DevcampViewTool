<div class="col-sm-8 blog-main">
    <%= form_for(@topic) do |f|%>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit "Add topic", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>