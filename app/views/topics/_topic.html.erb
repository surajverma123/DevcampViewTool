<div>
    <div class="row topic-iteration">
        <div class="col-md-6">
            <%= link_to topic.title, topic_path(topic) %>
        </div>
        <% if logged_in?(:admin) %>
            <div class="col-md-6">
                <%= link_to "Edit", edit_topic_path(topic), class: "btn btn-primary" %>
                <%= link_to "Delete", topic_path(topic) , class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure to delete this topic?"} %> 
            </div>
        <% end %>
    </div>
</div>